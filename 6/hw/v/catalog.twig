<figure class="item-card">
	<h3 class="item-card__title">{{ array_items.name }}</h3>
	<br/>
	<img src="{{ array_items.min_image_dir }}" alt="{{ array_items.name }}" class="item-card__image"/>
	<p class='item-card__category'><strong>Порода:</strong> {{ array_items.category }}</p>
	<figcaption class="item-card__description"><strong>Титулы:</strong> {{ array_items.description }}</figcaption>
	<h4><div class='item-card__price'>Цена: {{ array_items.price }}</div></h4>
</figure>