{# empty Twig template #}
<!DOCTYPE html>
<html>
<head>
	<title>{{title}}</title>
	<meta content="text/html; charset=UTF-8" http-equiv="content-type">	
	<link rel="stylesheet" type="text/css" media="screen" href="assets/css/style.css" /> 	
</head>
<body>
	<div id="header">
		<h1>{{title}}</h1>
	</div>
	
	<div id="menu">
		<a href="index.php">На главную</a> | 
		<a href="index.php?c=page&m=edit">Редактировать</a> | 
		{% if user == true %}
                    <a href="index.php?c=user&m=info">Личный кабинет</a> | <a href="index.php?c=user&m=logout">Выйти {{user}}</a>';
                {% endif %}
		{% if user == false %}
                    <a href="index.php?c=user&m=login">Войти</a> | <a href="index.php?c=user&m=reg">Регистрация</a>';
                {% endif %}
	</div>
	
	<div id="content">
	    {{content}}
	</div>
	
	<div id="footer">
            Подвал сайта
	</div>
</body>
</html>
